<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageAlbumNotification"
        android:layout_width="@dimen/width_imageAlbumNotification"
        android:layout_height="@dimen/height_imageAlbumNotification"
        android:layout_marginStart="@dimen/margin_Image_song"
        android:layout_marginLeft="@dimen/margin_Image_song"
        android:layout_marginTop="@dimen/margin_Image_song"
        android:layout_marginEnd="@dimen/margin_Image_song"
        android:layout_marginRight="@dimen/margin_Image_song"
        android:layout_marginBottom="@dimen/margin_Image_song"
        app:srcCompat="@drawable/bg_default_album_art" />


    <ImageView
        android:id="@+id/back_notification"
        android:layout_width="@dimen/width_back_notification"
        android:layout_height="@dimen/height_back_notification"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_Stop_Back"
        android:layout_marginEnd="@dimen/marginEnd_back"
        android:layout_toStartOf="@+id/background_play_pause_button"
        android:layout_toLeftOf="@+id/background_play_pause_button"
        app:srcCompat="@drawable/ic_rew_dark" />

    <ImageView
        android:id="@+id/background_play_pause_button"
        android:layout_width="@dimen/width_play"
        android:layout_height="@dimen/width_play"
        android:layout_marginTop="@dimen/marginTop_play"
        android:layout_marginEnd="@dimen/marginEnd_play"
        android:layout_marginRight="@dimen/marginRightPlay"
        android:layout_toStartOf="@+id/next_notification"
        android:layout_toLeftOf="@+id/next_notification"
        app:srcCompat="@drawable/ic_fab_play_btn_normal" />

    <ImageView
        android:id="@+id/next_notification"
        android:layout_width="@dimen/width_next_notification"
        android:layout_height="@dimen/height_next_notification"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_top_next"
        android:layout_marginEnd="@dimen/marginEnd_next_song"
        android:layout_marginRight="@dimen/marginRight_nextSong"
        app:srcCompat="@drawable/ic_fwd_dark" />

    <ImageView
        android:id="@+id/button_play"
        android:layout_width="@dimen/width_play_pause_notification"
        android:layout_height="@dimen/width_play_pause_notification"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/marginTop_play_notification"
        android:layout_marginEnd="@dimen/marginEnd_play_notification"
        android:layout_marginRight="@dimen/marginRight_play_notification"
        android:layout_toStartOf="@+id/next_notification"
        android:layout_toLeftOf="@+id/next_notification"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_media_play_dark" />


</RelativeLayout>